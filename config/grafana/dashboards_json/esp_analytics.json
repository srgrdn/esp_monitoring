{
  "id": null,
  "title": "ESP Analytics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "tags": ["esp", "analytics"],
  "templating": {
    "list": [
      {
        "name": "device",
        "type": "query",
        "label": "Device",
        "datasource": "VictoriaMetrics",
        "query": "label_values(rssi, instance)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "refresh": 1,
        "current": {
          "selected": true,
          "text": "All",
          "value": ".*"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Current status snapshot",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "targets": [
        { "expr": "last_over_time(rssi{instance=~\"$device\"}[5m])", "refId": "A" },
        { "expr": "last_over_time(temp{instance=~\"$device\"}[5m])", "refId": "B" },
        { "expr": "last_over_time(rtt{instance=~\"$device\"}[5m])", "refId": "C" },
        { "expr": "last_over_time(packet_loss{instance=~\"$device\"}[5m])", "refId": "D" },
        { "expr": "last_over_time(http_status{instance=~\"$device\"}[5m])", "refId": "E" },
        { "expr": "last_over_time(network_type{instance=~\"$device\"}[5m])", "refId": "F" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "value_and_name"
      }
    },
    {
      "type": "timeseries",
      "title": "RSSI with thresholds",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [{ "expr": "rssi{instance=~\"$device\"}" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "red", "value": -90 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Temperature with thresholds",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [{ "expr": "temp{instance=~\"$device\"}" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 15 },
              { "color": "red", "value": 30 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "RTT and Packet Loss (dual axis)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        { "expr": "rtt{instance=~\"$device\"}", "refId": "A" },
        { "expr": "packet_loss{instance=~\"$device\"}", "refId": "B" }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "drawStyle": "lines", "lineWidth": 2 } },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "B" },
            "properties": [
              { "id": "custom.axisPlacement", "value": "right" },
              { "id": "custom.lineWidth", "value": 2 },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "red", "value": 5 }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "A" },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "yellow", "value": 200 },
                    { "color": "red", "value": 400 }
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP status over time",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [{ "expr": "http_status{instance=~\"$device\"}" }]
    },
    {
      "type": "timeseries",
      "title": "RTT vs RSSI (overlay)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        { "expr": "rtt{instance=~\"$device\"}", "refId": "A" },
        { "expr": "rssi{instance=~\"$device\"}", "refId": "B" }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "drawStyle": "lines", "lineWidth": 2 } },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "B" },
            "properties": [
              { "id": "custom.axisPlacement", "value": "right" }
            ]
          }
        ]
      }
    },
    {
      "type": "timeseries",
      "title": "RSSI vs Temp (overlay)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        { "expr": "rssi{instance=~\"$device\"}", "refId": "A" },
        { "expr": "temp{instance=~\"$device\"}", "refId": "B" }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "drawStyle": "lines", "lineWidth": 2 } },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "B" },
            "properties": [
              { "id": "custom.axisPlacement", "value": "right" }
            ]
          }
        ]
      }
    },
    {
      "type": "stat",
      "title": "Min/Max/Avg (last 30m)",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 28 },
      "targets": [
        { "expr": "min_over_time(rssi{instance=~\"$device\"}[30m])", "refId": "A" },
        { "expr": "max_over_time(rssi{instance=~\"$device\"}[30m])", "refId": "B" },
        { "expr": "avg_over_time(rssi{instance=~\"$device\"}[30m])", "refId": "C" },
        { "expr": "min_over_time(temp{instance=~\"$device\"}[30m])", "refId": "D" },
        { "expr": "max_over_time(temp{instance=~\"$device\"}[30m])", "refId": "E" },
        { "expr": "avg_over_time(temp{instance=~\"$device\"}[30m])", "refId": "F" },
        { "expr": "avg_over_time(rtt{instance=~\"$device\"}[30m])", "refId": "G" },
        { "expr": "avg_over_time(packet_loss{instance=~\"$device\"}[30m])", "refId": "H" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value_and_name"
      }
    },
    {
      "type": "timeseries",
      "title": "RTT p95 / p99 (15m window)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 34 },
      "targets": [
        { "expr": "quantile_over_time(0.95, rtt{instance=~\"$device\"}[15m])", "refId": "A" },
        { "expr": "quantile_over_time(0.99, rtt{instance=~\"$device\"}[15m])", "refId": "B" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Alerts fired (per minute)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 34 },
      "targets": [
        { "expr": "sum by (alertname) (increase(ALERTS{alertstate=\"firing\"}[1m]))" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Latest per instance (5m window)",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 42 },
      "targets": [
        { "expr": "last_over_time(rssi{instance=~\"$device\"}[5m])", "refId": "A" },
        { "expr": "last_over_time(temp{instance=~\"$device\"}[5m])", "refId": "B" },
        { "expr": "last_over_time(rtt{instance=~\"$device\"}[5m])", "refId": "C" },
        { "expr": "last_over_time(packet_loss{instance=~\"$device\"}[5m])", "refId": "D" },
        { "expr": "last_over_time(http_status{instance=~\"$device\"}[5m])", "refId": "E" },
        { "expr": "last_over_time(network_type{instance=~\"$device\"}[5m])", "refId": "F" }
      ],
      "options": {
        "showHeader": true,
        "sortBy": []
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "A": "rssi",
              "B": "temp",
              "C": "rtt",
              "D": "packet_loss",
              "E": "http_status",
              "F": "network_type"
            }
          }
        }
      ]
    }
  ]
}

